{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "checkJs": false,
    "preserveConstEnums": true,
    "sourceMap": true,
  },
  
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
